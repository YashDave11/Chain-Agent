# ChainAgent Environment Configuration
# Copy this to .env and fill in your values

# ===================
# BLOCKCHAIN (Sepolia)
# ===================
# Get from https://alchemy.com or https://infura.io
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY_HERE

# ===================
# PIMLICO (Bundler/Paymaster)
# ===================
# Get from https://dashboard.pimlico.io
NEXT_PUBLIC_PIMLICO_API_KEY=YOUR_PIMLICO_KEY_HERE

# ===================
# CONTRACT ADDRESSES (Filled after deployment)
# ===================
NEXT_PUBLIC_COORDINATOR_AGENT_ADDRESS=
NEXT_PUBLIC_EXECUTION_AGENT_ADDRESS=
NEXT_PUBLIC_MOCK_ORACLE_ADDRESS=

# ===================
# ENVIO
# ===================
NEXT_PUBLIC_ENVIO_GRAPHQL_URL=http://localhost:8080/v1/graphql

